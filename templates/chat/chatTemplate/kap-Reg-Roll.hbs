<div class="GDSA chat message skill">

    <div class="chathrBox"><hr class="chathr" /></div>
    <div class="chatheadline">{{localize "GDSA.chat.medi.media"}} {{statValue}}</div>
    <div class="chathrBox"><hr class="chathrBold" /></div>

    <div id="collapsable">
        <div class="infoMainBox">
            <div class="infoDiceBox4">
                <div class="infoDices">{{roll.total}}</div>
                <div class="infoDices">{{roll2.total}}</div>
                <div class="infoDices">{{roll3.total}}</div>
            </div>
        </div>
        <div class="chathrBox"><hr class="chathrBold" /></div>
    </div>
    
    {{#if modPresent}}
        {{#if isAdv}}
            <div class="rollpositivMod">{{localize "GDSA.chat.skill.advantageOf"}} {{adv}}</div>
            <div class="chathrBox"><hr class="chathrBold" /></div>
        {{/if}}
        {{#if isDis}}
            <div class="rollnegativMod">{{localize "GDSA.chat.skill.disadvantageOf"}} {{dis}}</div>
            <div class="chathrBox"><hr class="chathrBold" /></div>
        {{/if}}
    {{/if}}

    <div class="dice-formula">
        {{#if result}}
            <div class="rollSkillSuccess">{{tap}} {{localize "GDSA.chat.medi.kapReg"}}<span id="additionalInfo"></span></div>
        {{else}}
            <div class="rollSkillFail">{{localize "GDSA.chat.stat.fail"}}<span id="additionalInfo"></span></div>
        {{/if}}
    </div>  
</div>