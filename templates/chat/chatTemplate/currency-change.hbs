<div class="GDSA chat message skill">
    <div class="chathrBox"><hr class="chathr" /></div>
    <div class="chatInfoMessage">
        {{#if add}}
            {{actor.name}} {{localize "GDSA.chat.dialog.has"}} 
            {{#if (isGreater gold 0)}}{{gold}} {{localize "GDSA.charactersheet.gold"}} {{/if}}
            {{#if (isGreater silver 0)}}{{silver}} {{localize "GDSA.charactersheet.silver"}} {{/if}}
            {{#if (isGreater copper 0)}}{{copper}} {{localize "GDSA.charactersheet.copper"}} {{/if}}
            {{#if (isGreater nikel 0)}}{{nikel}} {{localize "GDSA.charactersheet.nikel"}} {{/if}}
            {{localize "GDSA.chat.dialog.get"}}
        {{else}}
            {{actor.name}} {{localize "GDSA.chat.dialog.has"}} 
            {{#if (isGreater gold 0)}}{{gold}} {{localize "GDSA.charactersheet.gold"}} {{/if}}
            {{#if (isGreater silver 0)}}{{silver}} {{localize "GDSA.charactersheet.silver"}} {{/if}}
            {{#if (isGreater copper 0)}}{{copper}} {{localize "GDSA.charactersheet.copper"}} {{/if}}
            {{#if (isGreater nikel 0)}}{{nikel}} {{localize "GDSA.charactersheet.nikel"}} {{/if}}
            {{localize "GDSA.chat.dialog.spent"}}
        {{/if}}
    </div>
</div>