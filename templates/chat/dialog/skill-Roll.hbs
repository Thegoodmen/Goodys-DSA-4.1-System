<form class="dialogConfig">
    <div class="form-group subMain">
        <div class="submen"><hr class="subhr" /></div>{{name}}<div class="submen"><hr class="subhr" /></div>
    </div>

    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.advantage"}}</label>
        <input class="mediOpt" type="number" name="advantage" value="0" />
    </div>
    <div class="form-group">
        <label>{{localize "GDSA.chat.skill.disadvantage"}}</label>
        <input class="mediOpt" type="number" name="disadvantage" value="0" />
    </div>

    {{#if klerikal}}
        {{#unless (equals name "Liturgiekenntnis")}}
            <div class="form-group">
                <label>{{localize "GDSA.chat.skill.mirakel"}}</label>
                <input class="mediOpt" id="inboxCast" type="checkbox" name="mirakel" />
            </div>
        {{/unless}}
    {{/if}}

    {{#if system.tale.BECheck}}

        <div class="form-group subSub">
            <div class="submen"><hr class="subhr" /></div>{{localize "GDSA.chat.skill.modi"}}<div class="submen"><hr class="subhr" /></div>
        </div>
        
        <div class="form-group">
            <label>{{localize "GDSA.template.BE"}}</label>
            <input id="inboxCast" type="checkbox" name="be" checked />
            <input id="inboxCast" type="text" name="beValue" value="{{beDis}}" hidden />
        </div>

    {{/if}}

    {{#if isMHK}}

        <div class="form-group subSub">
            <div class="submen"><hr class="subhr" /></div>{{localize "GDSA.chat.skill.boni"}}<div class="submen"><hr class="subhr" /></div>
        </div>
        
        <div class="form-group">
            <label>{{localize "GDSA.chat.skill.mhk"}}</label>
            <input class="mediOpt" id="inputCast" type="number" name="mhk" min="0" max="{{MHKMx}}" value="0" /> {{localize "GDSA.itemsheet.asp"}}
        </div>

    {{/if}}

    {{#if isTalentS}}

        {{#unless isMHK}}
            <div class="form-group subSub">
                <div class="submen"><hr class="subhr" /></div>{{localize "GDSA.chat.skill.boni"}}<div class="submen"><hr class="subhr" /></div>
            </div>
        {{/unless}}
        
        <div class="form-group">
            <label>{{localize "GDSA.chat.skill.talentS"}}</label>
            <input id="inputCast" type="checkbox" name="talentS" min="0" />
        </div>

        <div class="form-group">
            <label>{{localize "GDSA.chat.skill.advantage"}}</label>
            <input class="mediOpt" type="number" name="talSadvantage" value="0" />
        </div>
        
        <div class="form-group">
            <label>{{localize "GDSA.chat.skill.disadvantage"}}</label>
            <input class="mediOpt" type="number" name="talSdisadvantage" value="0" />
        </div>

    {{/if}}

    <div class="form-group subSub">
        <div class="submen"><hr class="subhr" /></div><div class="submen"><hr class="subhr" /></div>
    </div>
    
</form>