<div class="invFiller"></div>
<div class="skillHeaderBox">
    <div class="invMenuHelper">
	    <div class="skillHeaderSkillBox3">
            <div class="headerLable">{{localize "GDSA.charactersheet.gold"}}</div><div class="headerValue">
                <input class="headerValue moneylable" name="system.money.gold" type="number" value="{{system.money.gold}}" disabled /></div> 
            <div class="headerLable">{{localize "GDSA.charactersheet.silver"}}</div><div class="headerValue">
                <input class="headerValue moneylable" name="system.money.silver" type="number" value="{{system.money.silver}}" disabled /></div>
            <div class="headerLable">{{localize "GDSA.charactersheet.copper"}}</div><div class="headerValue">
                <input class="headerValue moneylable" name="system.money.copper" type="number" value="{{system.money.copper}}" disabled /></div> 
            <div class="headerLable">{{localize "GDSA.charactersheet.nikel"}}</div><div class="headerValue">
                <input class="headerValue moneylable" name="system.money.nickel" type="number" value="{{system.money.nickel}}" disabled /></div>
	    </div>
        <div class="invAddBox">
            <a class="change-money" title="{{localize "GDSA.charactersheet.addMoney"}}"><i class="fas fa-wallet plusSym2"></i></a>
        </div>
    </div>
</div>

<div class="inventory">
    <section class="item-list">
            
        <div class="invtableborder">
            <div class="invHeader">{{localize "GDSA.charactersheet.meleeWeapons"}}
                {{#if system.editInv}}
                    <div class="addItemBox"><a class="meleeW-add" data-type="melee-weapons" title="{{localize "GDSA.charactersheet.addItem"}}">
                        <i class="fas fa-plus plusSym2"></i>
                    </a></div>
                {{/if}}
                <div class="collabsCatogary"><a class="toggleHide" data-type="meeleW" title="Show / Hide"><i class="fa-regular fa-list-tree"></i></a></div>
            </div>
            {{#if (getData actor.system.generalItemType "meeleW")}}
                {{#each meleeweapons as |item id|}}
                    <div class="invItem item-context item" data-item-id="{{_id}}">{{name}} <br /> > <i>{{getSkillFromTemp system.weapon.skill}}</i>
                        <div class="itemImgBox"><img class="itemImg" src="{{img}}"></div>
                        <div class="itemWorn">
                            {{#if system.worn}}
                                <a class="item-remove"><i class="fas fa-child"></i></a>
                            {{else}}
                                <a class="item-apply"><i class="fas fa-box"></i></a>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        
        <div class="invDivider"></div>
        
        <div class="invtableborder">
            <div class="invHeader">{{localize "GDSA.charactersheet.rangeWeapons"}}
                {{#if system.editInv}}
                    <div class="addItemBox"><a class="rangeW-add" data-type="range-weapons" title="{{localize "GDSA.charactersheet.addItem"}}">
                        <i class="fas fa-plus plusSym2"></i>
                    </a></div>
                {{/if}}
                <div class="collabsCatogary"><a class="toggleHide" data-type="rangeW" title="Show / Hide"><i class="fa-regular fa-list-tree"></i></a></div>
            </div>
            {{#if (getData actor.system.generalItemType "rangeW")}}
                {{#each rangeweapons as |item id|}}
                    <div class="invItem item-context item" data-item-id="{{_id}}">{{name}} <br /> > <i>{{getSkillFromTemp system.weapon.skill}}</i>
                        <div class="itemImgBox"><img class="itemImg" src="{{img}}"></div>
                        <div class="itemWorn">
                            {{#if system.worn}}
                                <a class="item-remove"><i class="fas fa-child"></i></a>
                            {{else}}
                                <a class="item-apply"><i class="fas fa-box"></i></a>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        
        <div class="invDivider"></div>
        
        <div class="invtableborder">
            <div class="invHeader">{{localize "GDSA.charactersheet.shields"}}
                {{#if system.editInv}}
                    <div class="addItemBox"><a class="shilds-add" data-type="shields" title="{{localize "GDSA.charactersheet.addItem"}}">
                        <i class="fas fa-plus plusSym2"></i>
                    </a></div>
                {{/if}}
                <div class="collabsCatogary"><a class="toggleHide" data-type="shield" title="Show / Hide"><i class="fa-regular fa-list-tree"></i></a></div>
            </div>
            {{#if (getData actor.system.generalItemType "shield")}}
                {{#each shields as |item id|}}
                    <div class="invItem item-context item" data-item-id="{{_id}}">{{name}} <br /> > <i>{{localize (concat "GDSA.itemsheet." system.weapon.parType "")}}</i>
                        <div class="itemImgBox"><img class="itemImg" src="{{img}}"></div>
                        <div class="itemWorn">
                            {{#if system.worn}}
                                <a class="item-remove"><i class="fas fa-child"></i></a>
                            {{else}}
                                <a class="item-apply"><i class="fas fa-box"></i></a>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        
        <div class="invDivider"></div>
        
        <div class="invtableborder">
            <div class="invHeader">{{localize "GDSA.charactersheet.armour"}}
                {{#if system.editInv}}
                    <div class="addItemBox"><a class="armour-add" data-type="armour" title="{{localize "GDSA.charactersheet.addItem"}}">
                        <i class="fas fa-plus plusSym2"></i>
                    </a></div>
                {{/if}}
                <div class="collabsCatogary"><a class="toggleHide" data-type="armour" title="Show / Hide"><i class="fa-regular fa-list-tree"></i></a></div>
            </div>
            {{#if (getData actor.system.generalItemType "armour")}}
                {{#each armour as |item id|}}
                    <div class="invItem item-context item" data-item-id="{{_id}}">{{name}} <br /> > <i>{{#if system.armour.Z}} {{localize "GDSA.itemsheet.zArmour"}} {{else}} {{localize "GDSA.itemsheet.zoneArmour"}} {{/if}}</i>
                        <div class="itemImgBox"><img class="itemImg" src="{{img}}"></div>
                        <div class="itemWorn">
                            {{#if system.worn}}
                                <a class="item-remove"><i class="fas fa-child"></i></a>
                            {{else}}
                                <a class="item-apply"><i class="fas fa-box"></i></a>
                            {{/if}}
                        </div>
                    </div>
                {{/each}}
            {{/if}}
        </div>
        
        <div class="invDivider"></div>
        
        <div class="invtableborder3">
            <div class="invHeader4">{{localize "GDSA.charactersheet.generals"}}
                {{#if system.editInv}}
                    <div class="addItemBox"><a class="item-add" data-type="generals" title="{{localize "GDSA.charactersheet.addItem"}}">
                        <i class="fas fa-plus plusSym2"></i>
                    </a></div>
                {{/if}}
            </div>
            {{#each actor.system.generalItems as |catogary id|}}
                <div class="invHeader3">{{type}}<div class="collabsCatogary"><a class="toggleHide" data-type="{{type}}" title="Show / Hide"><i class="fa-regular fa-list-tree"></i></a></div></div>
                    {{#if (getData ../actor.system.generalItemType type)}}
                        {{#each item as |item id|}}
                            <div class="invItem3 item-context item {{#if @last}}invItemLast{{/if}}" data-item-id="{{_id}}">{{name}} <br /> > <i>{{getItemtype system.itemType }}</i>
                                <div class="itemAmountBox Quantity"><input class="itemAmount Quantity" name="system.quantity" value="{{system.quantity}}" type="number" disabled></div>
                                <div class="itemImgBox allItemIMG"><img class="itemImg" src="{{img}}"></div>
                            </div>
                        {{/each}}
                    {{/if}}
	        {{/each}}
        </div>
        
        <div class="invDivider"></div>

    </section>
</div>