                    {{#each combatTraits as |Trait id|}}
                        <div class="item" data-type="{{system.type}}" data-item-id="{{_id}}">
                            <div class="trait">{{name}} {{#if (isSleeping this ../this)}}<i>({{localize "GDSA.system.sleeping"}})</i>{{/if}}</div><hr class="flawhr" />
                        </div>
                    {{/each}}
                </section>
            </div>

        {{else}}

            <div class="sonderfBox2">
                <div class="traithead">{{localize "GDSA.charactersheet.generalTrait"}}</div>
