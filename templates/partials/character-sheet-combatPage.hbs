                    <i class="fas fa-book plusSym"></i>
                </a></div>
                <div class="traithrbox"><hr class="flawhr" /></div>
                <section class="traits2">
                    {{#each generalTraits as |Trait id|}}
                        <div class="item" data-type="{{system.type}}" data-item-id="{{_id}}">
                            <div class="trait">{{name}} {{#if (isSleeping this ../this)}}<i>({{localize "GDSA.system.sleeping"}})</i>{{/if}}</div><hr class="flawhr" />
                        </div>
                    {{/each}}
                </section>
            </div>

        {{/if}}

    {{else}}

        <div class="sonderfBox2">
            <div class="traithead">{{localize "GDSA.charactersheet.generalTrait"}}</div>
            <div class="flawbnt"><a class="changeTab item" data-destination="generaltraitPage" data-origin="combatePage" data-optional="general">
                <i class="fas fa-book plusSym"></i>
            </a></div>
            <div class="traithrbox"><hr class="flawhr" /></div>
