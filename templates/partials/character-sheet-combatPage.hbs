    </div>
</div>
	
<div class="skillsBox">

    <div class="combatFiller1"></div>

    {{> "systems/gdsa/templates/partials/character-sheet-woundChart.hbs"}}

    <div class="combatWindow">
        <div class="combatBntBar">
            <a id="doDMG" class="myButton getDMG">{{localize "GDSA.charactersheet.dmg"}}</a> 
            <a id="doReg" class="myButton doReg">{{localize "GDSA.charactersheet.reg"}}</a> 
            <a id="doHeal" class="myButton getHeal">{{localize "GDSA.charactersheet.heal"}}</a>
        </div>

        <div class="combatBntBar">
            <a id="doDogde" class="myButton dogde-roll">{{localize "GDSA.charactersheet.dogde"}}: {{system.Dogde}}</a> 
            <a id="doZone" class="myButton zone-roll">{{localize "GDSA.charactersheet.zone"}}</a> 
        </div>
    
        <div class="combatTableBox1">
            <table class="combatTable">
                <tr>
                    <td class="tableLbl">{{localize "GDSA.charactersheet.meleeWeapons"}}</td>
                    <td class="tableBnt"></td><td class="tableBnt"></td>
                    <td class="tableBnt"><a class="item m-fail-roll" title="{{localize "GDSA.charactersheet.crittFailRoll"}}"><i class="fas fa-duotone fa-burst faD20Stat"></i></a></td>
                </tr>
                <tr data-item-id="raufen">
                        <td class="tableLbl">{{localize "GDSA.charactersheet.raufSkill"}}</td>
                        <td class="tableBnt"><a class="item attack-roll" title="{{localize "GDSA.charactersheet.atRoll"}}" data-tooltip="{{aktTooltip this "Raufen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-gavel faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item parry-roll" title="{{localize "GDSA.charactersheet.paRoll"}}" data-tooltip="{{defTooltip this "Raufen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-shield-alt faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item damage-roll" title="{{localize "GDSA.charactersheet.dmgRoll"}}"><i class="fas fa-tint faD20Stat"></i></a></td>
                </tr>
                <tr data-item-id="ringen">
                        <td class="tableLbl">{{localize "GDSA.charactersheet.ringSkill"}}</td>
                        <td class="tableBnt"><a class="item attack-roll" title="{{localize "GDSA.charactersheet.atRoll"}}" data-tooltip="{{aktTooltip this "Ringen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-gavel faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item parry-roll" title="{{localize "GDSA.charactersheet.paRoll"}}" data-tooltip="{{defTooltip this "Ringen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-shield-alt faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item damage-roll" title="{{localize "GDSA.charactersheet.dmgRoll"}}"><i class="fas fa-tint faD20Stat"></i></a></td>
                </tr>
                {{#if system.nwbite}}
                    <tr data-item-id="biss">
                            <td class="tableLbl">{{localize "GDSA.advantage.bite"}}</td>
                            <td class="tableBnt"><a class="item attack-roll" title="{{localize "GDSA.charactersheet.atRoll"}}" data-tooltip="{{aktTooltip this "Raufen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-gavel faD20Stat"></i></a></td>
                            <td class="tableBnt"><a class="item parry-roll" title="{{localize "GDSA.charactersheet.paRoll"}}" data-tooltip="{{defTooltip this "Raufen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-shield-alt faD20Stat"></i></a></td>
                            <td class="tableBnt"><a class="item damage-roll" title="{{localize "GDSA.charactersheet.dmgRoll"}}"><i class="fas fa-tint faD20Stat"></i></a></td>
                    </tr>
                {{/if}}
                {{#if system.nwtail}}
                    <tr data-item-id="schwanz">
                            <td class="tableLbl">{{localize "GDSA.advantage.tail"}}</td>
                            <td class="tableBnt"><a class="item attack-roll" title="{{localize "GDSA.charactersheet.atRoll"}}" data-tooltip="{{aktTooltip this "Ringen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-gavel faD20Stat"></i></a></td>
                            <td class="tableBnt"><a class="item parry-roll" title="{{localize "GDSA.charactersheet.paRoll"}}" data-tooltip="{{defTooltip this "Ringen" ""}}" data-tooltip-direction="LEFT"><i class="fas fa-shield-alt faD20Stat"></i></a></td>
                            <td class="tableBnt"><a class="item damage-roll" title="{{localize "GDSA.charactersheet.dmgRoll"}}"><i class="fas fa-tint faD20Stat"></i></a></td>
                    </tr>
                {{/if}}
                {{#each equiptMelee as |item id|}}
                    <tr data-item-id="{{_id}}">
                        <td class="tableLbl">{{name}}</td>
                        <td class="tableBnt"><a class="item attack-roll" title="{{localize "GDSA.charactersheet.atRoll"}}" data-tooltip="{{aktTooltip ../this "" this}}" data-tooltip-direction="LEFT"><i class="fas fa-gavel faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item parry-roll" title="{{localize "GDSA.charactersheet.paRoll"}}" data-tooltip="{{defTooltip ../this "" this}}" data-tooltip-direction="LEFT"><i class="fas fa-shield-alt faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item damage-roll" title="{{localize "GDSA.charactersheet.dmgRoll"}}"><i class="fas fa-tint faD20Stat"></i></a></td>
                    </tr>
                {{/each}}
            </table>
        </div>

        <div class="combatTableBox2">
            <table class="combatTable">
                <tr>
                    <td class="tableLbl">{{localize "GDSA.charactersheet.rangeWeapons"}}</td>
                    <td class="tableBnt"></td><td class="tableBnt"></td>
                    <td class="tableBnt"><a class="item r-fail-roll" title="{{localize "GDSA.charactersheet.crittFailRoll"}}"><i class="fas fa-duotone fa-burst faD20Stat"></i></a></td>
                </tr>
                {{#each equiptRange as |item id|}}
                    <tr data-item-id="{{_id}}">
                        <td class="tableLbl">{{name}}</td>
                        <td class="tableBnt"></td>
                        <td class="tableBnt"><a class="item attack-roll" title="{{localize "GDSA.charactersheet.atRoll"}}" data-tooltip="{{rangeTooltip ../this "" this}}" data-tooltip-direction="LEFT"><i class="fas fa-bullseye faD20Stat"></i></a></td>
                        <td class="tableBnt"><a class="item damage-roll" title="{{localize "GDSA.charactersheet.dmgRoll"}}"><i class="fas fa-tint faD20Stat"></i></a></td>
                    </tr>
                {{/each}}
            </table>
        </div>

        <div class="combatTableBox3">
            <table class="combatTable">
                <tr>
                    <td class="tableLbl">{{localize "GDSA.charactersheet.shields"}}</td>
                    <td class="tableBnt"></td><td class="tableBnt"></td><td class="tableBnt"></td>
                </tr>
                {{#each equiptShield as |item id|}}
                    <tr data-item-id="{{_id}}">
                        <td class="tableLbl">{{name}}</td>
                        <td class="tableBnt"></td>
                        <td class="tableBnt"></td>
                        <td class="tableBnt"><a class="item shield-roll" title="{{localize "GDSA.charactersheet.paRoll"}}"><i class="fas fa-shield-alt faD20Stat"></i></a></td>
                    </tr>
                {{/each}}
            </table>
        </div>

    </div>

    {{#if system.magical}}
		{{#if system.klerikal}}

            <div class="sonderfBox">
                <div class="traithead">{{localize "GDSA.charactersheet.generalTrait"}}</div>
